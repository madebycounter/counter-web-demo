{
    "name": "counter-e-commerce",
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "dev:sanity": "sanity dev",
        "build:sanity": "sanity build",
        "start:sanity": "sanity start",
        "deploy:sanity": "sanity deploy"
    },
    "dependencies": {
        "@sanity/vision": "^3.50.0",
        "next": "14.2.5",
        "next-sanity": "^9.4.2",
        "react": "^18",
        "react-dom": "^18",
        "react-icons": "^5.2.1",
        "sanity": "^3.50.0",
        "sanity-plugin-mux-input": "^2.3.6",
        "styled-components": "^6.1"
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "@types/node": "^20",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "postcss": "^8",
        "prettier": "^3.3.3",
        "prettier-plugin-groq": "^0.2.5",
        "prettier-plugin-tailwindcss": "^0.6.5",
        "tailwindcss": "^3.4.1",
        "typescript": "^5"
    },
    "prettier": {
        "plugins": [
            "@trivago/prettier-plugin-sort-imports",
            "prettier-plugin-tailwindcss",
            "prettier-plugin-groq"
        ],
        "importOrder": [
            "<THIRD_PARTY_MODULES>",
            "@/util/(.*)$",
            "@/components/(.*)$",
            "@/site/(.*)$",
            "@/lib/(.*)$",
            "@/*/(.*)$",
            "^[./]"
        ],
        "tailwindFunctions": [
            "clsx"
        ],
        "importOrderSeparation": true,
        "tabWidth": 4
    }
}
